generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") 
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Lead {
  id               String   @id @default(cuid())
  first_name       String
  last_name        String
  email            String   @unique
  phone            String?
  company          String?
  city             String?
  state            String?
  source           Source
  status           Status
  score            Int?
  lead_value       Float?
  last_activity_at DateTime?
  is_qualified     Boolean  @default(false)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

enum Source {
  website
  facebook_ads
  google_ads
  referral
  events
  other
}

enum Status {
  new
  contacted
  qualified
  lost
  won
}
